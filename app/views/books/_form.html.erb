<%= simple_form_for(@book, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name, autofocus: true, required: true, label: false, placeholder: "Nom ou Titre", input_html: {class: "form-control"} %>
    <%= f.input :author, required: true, label: false, placeholder: "Auteur", input_html: { class: "form-control"} %>
    <%= f.input :description, required: true, label: false, placeholder: "Description", input_html: { class: "form-control", rows: 5} %>
    <%= f.input :price, required: true, label: false, placeholder: "Prix en Dollar US", input_html: {class: "form-control"} %>
    <h5 class="text-center">Disponible: <%= f.input :availability, required: true, label: false %></h5>
    <%= f.button :submit, class: "btn btn-info btn-block" %>

<% end %>
