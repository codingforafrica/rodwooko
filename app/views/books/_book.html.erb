<div class="col-sm-6 col-md-3">
  <div class="thumbnail">
    <%= link_to book_path(book) do %>
    <%= image_tag book.image.url(:original), class: "img-responsive" %>
    <% end %>
        <div class="caption">
          <h4 class="text-centered"><%= book.name %></h4>
          <p class="text-centered">$<%= book.price.to_f / 100 %></p>
          <div class="btn btn-group">
            <%= link_to "<i class='fa fa-eye'></i> Preview".html_safe, book_path(book), class: "btn btn-success" %>

            <%= form_tag payer_path(slug: book.slug) do %>
                <script
                    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-amount="<%= book.price %>"
                    data-name="RodWOOKO-PAYEMENT"
                    data-description="<%= book.name %>"
                    data-email="<%= current_user.email %>" >
                </script>
            <% end %>

          </div>
        </div>
  </div>
</div>