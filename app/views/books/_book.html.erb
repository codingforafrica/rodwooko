<div class="col-sm-6 col-md-3">
  <div class="thumbnail">
    <%= link_to book_path(book) do %>
    <%= image_tag book.image.url(:original), class: "img-responsive" %>
    <% end %>
        <div class="caption">
          <h4 class="text-centered"><%= book.name %></h4>
          <p class="text-centered">$<%= book.price.to_f / 100 %></p>
          <div class="btn btn-group">
            <%= link_to "<i class='fa fa-eye'></i> Preview".html_safe, book_path(book), class: "btn btn-primary" %>
            <%= link_to "<i class='fa fa-shopping-cart'></i> Acheter".html_safe, "#", class: "btn btn-success" %>
          </div>
        </div>
  </div>
</div>